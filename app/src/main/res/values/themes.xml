<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NumberConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="background">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="titleResultTextStyle">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>
</resources>